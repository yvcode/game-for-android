java code-button toast

        final Button button = findViewById(R.id.Button);
        button.setOnClickListener(new View.OnClickListener() {
            public void onClick(View v) {
                Toast myToast = Toast.makeText(getApplicationContext(), "lol", Toast.LENGTH_LONG);
                myToast.show();
                TextView filxd1 = (TextView)findViewById(R.id.tbox);
                String str = "lol";
                filxd1.append(str);
            }
        });
